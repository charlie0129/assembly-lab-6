@echo off
REM Assembly 'make' in MS-DOS batch by Charlie Chiang

SET FILE=LAB06

IF "%1"=="clean" GOTO CLEAN
IF "%1"=="run" GOTO RUN
IF "%1"=="" GOTO COMPILE
GOTO DONE

:COMPILE
MASM %FILE%.ASM;
LINK %FILE%.OBJ;
GOTO DONE

:RUN
MASM %FILE%.ASM;
LINK %FILE%.OBJ;
LAB06.EXE
GOTO DONE

:CLEAN
DEL %FILE%.OBJ 2>nul
DEL %FILE%.EXE 2>nul
DEL %FILE%.LST 2>nul
GOTO DONE

:DONE